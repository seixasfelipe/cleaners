<%= simple_form_for(@state, html: { class: "form-horizontal"}) do |f| %>
  <fieldset>
    <% if @state.errors.any? %>
    <div class="alert alert-error fade in">
      <button type="button" class="close" data-dismiss="alert">&#215;</button>
      <strong>Oops!</strong>  <%= t 'errors.template.body', :count => @state.errors.count %>
      <ul>
      <% @state.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <legend><%= t('helpers.header.fill_information')%></legend>

    <div class="form-inputs">
      <%= f.input :name, placeholder: t(".name"), autofocus: true %>
      <%= f.input :abbreviation, placeholder: t(".abbreviation") %>
      <%= f.association :country %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('helpers.submit.save'), class: "btn btn-primary" %>
      <%= link_to 'Cancelar', countries_path, class: "btn" %>
    </div>
  </fieldset>
<% end %>
