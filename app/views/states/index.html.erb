<div class="container">

  <h1>Todos os Estados</h1>

  <hr>

  <table class="table table-striped table-condensed table-hover">

    <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".abbreviation" %></th>
        <th><%= t ".country" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>

      <% @states.each do |state| %>
      <tr>
        <td><%= link_to "%03d" % state.id, edit_state_path(state.id) %></td>
        <td><%= state.name %></td>
        <td><%= state.abbreviation %></td>
        <td><%= state.country.name %></td>
        <td>
          <%= link_to t('helpers.submit.edit'), edit_state_path(state.id), :class => "btn btn-warning" %>
          <%= link_to t('helpers.submit.remove'), state_path(state.id), :class => "btn btn-danger", :method => :delete %>
        </td>
      </tr>
      <% end %>

      <tr>
        <td></td>
        <td><input type="text" placeholder="Nome" value="" class="input-medium"></td>
        <td><input type="text" placeholder="Sigla" value="" class="input-medium"></td>
        <td><input type="text" placeholder="PaÃ­s" value="" class="input-medium"></td>
        <td>
          <%= link_to t('helpers.submit.create', model: t('activerecord.models.state')), new_state_path, :class => "btn btn-primary" %>
        </td>
      </tr>

    </tbody>

  </table>

  <hr>

</div> <!-- /container -->
