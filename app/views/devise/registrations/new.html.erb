<h2>Sign up</h2>

<%= simple_form_for(resource,
                    as: resource_name,
                    wrapper: :login,
                    url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'First name' %>
  <%= f.input :last_name, required: true, label: false, placeholder: 'Last name' %>
  <%= f.input :username, required: true, label: false, placeholder: 'Username' %>
  <%= f.input :email, required: true, label: false, placeholder: 'Email' %>
  <%= f.input :password, required: true, label: false, placeholder: 'Password' %>
  <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password confirmation' %>  </div>

  <div class="form-actions">
    <%= f.button :submit, t('helpers.links.create_user') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
