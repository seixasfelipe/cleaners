<%= simple_form_for(@task, html: { class: "form-horizontal"}) do |f| %>
  <fieldset>
    <% if @task.errors.any? %>
    <div class="alert alert-error fade in">
      <button type="button" class="close" data-dismiss="alert">&#215;</button>
      <strong>Oops!</strong> O formulário possui <%= pluralize(@task.errors.count, "campo") %> com problemas:</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <legend>Preencha as informações</legend>

    <div class="form-inputs">
      <%= f.input :name, placeholder: t(".name"), autofocus: true %>
      <%= f.input :price, as: :currency, placeholder: t(".price") %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Gravar', class: "btn btn-primary" %>
      <%= link_to 'Cancelar', tasks_path, class: "btn" %>
    </div>
  </fieldset>
<% end %>
