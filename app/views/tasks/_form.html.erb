<%= form_for(@task, :html => { :class => "form-horizontal"}) do |f| %>
  <fieldset>
    <% if @task.errors.any? %>
    <div class="alert alert-error fade in">
      <button type="button" class="close" data-dismiss="alert">&#215;</button>
      <strong>Oops!</strong> O formulário possui <%= pluralize(@task.errors.count, "campo") %> com problemas:</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <legend>Preencha as informações</legend>
    
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => "Nome" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :price, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :price, :placeholder => "Preço R$" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Gravar', :class => "btn btn-primary" %>
      <%= link_to 'Cancelar', tasks_path, :class => "btn" %>
    </div>
  </fieldset>
<% end %>