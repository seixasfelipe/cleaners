<style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #ff7f00;
  }

  .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    /*background-color: #fff;*/
    /*border: 1px solid #e5e5e5;*/
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }

</style>

<div class="container">
  <%= image_tag "cleaners-logo-resized.jpg", style: "margin-left: auto; margin-right: auto; display: block" %>

      <form class="form-signin" action="home.html" method="post">
        <div class="control-group">
          <div class="controls controls-row">
            <input type="text" class="" placeholder="Email">
            <input type="password" class="" placeholder="Senha">
            <%= link_to 'Entrar', home_path, :class => "btn btn-large btn-primary" %>
          </div>
        </div>
      </form>
</div> <!-- /container -->
