<style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #ff7f00;
  }

  .form-signin {
    max-width: 226px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    /*background-color: #fff;*/
    /*border: 1px solid #e5e5e5;*/
    /*-webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;*/
    /*-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);*/
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 10px;
    padding: 5px 9px;
  }

  .form-signin .actions a{
    float: left;
  }

  .form-signin .actions input{
    float: right;
  }

</style>

<div class="container">
  <%= image_tag "cleaners-logo-resized.jpg", style: "margin-left: auto; margin-right: auto; display: block" %>

  <%= simple_form_for(resource,
                      as: resource_name,
                      wrapper: :login,
                      url: session_path(resource_name),
                      html: { class: "form-signin"}) do |f| %>
        <%= f.input :login, required: true, label: false, autofocus: true, placeholder: 'Usuario' %>
        <%= f.input :password, required: true, label: false, placeholder: 'Senha' %>
        <div class="actions">
          <%= f.button :submit, "Entrar", class: "btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
  <% end %>
</div>
